<Window x:Class="Qrcode.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Qrcode"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid KeyUp="Grid_KeyUp">
        <TextBlock Name="trip" Grid.Row="1" Grid.Column="1" Padding="0" TextWrapping="WrapWithOverflow" Margin="225,50,0,0">
        </TextBlock>
        <TextBox x:Name="login" HorizontalAlignment="Left" Height="23" Margin="216,100,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label_login" Content="Логін" HorizontalAlignment="Left" Margin="150,100,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_password" Content="Пароль" HorizontalAlignment="Left" Margin="150,150,0,0" VerticalAlignment="Top"/>
        <Button x:Name="enter" Content="Вхід" HorizontalAlignment="Left" Margin="395,126,0,0" VerticalAlignment="Top" Width="75" Click="enter_Click" />
        <PasswordBox x:Name="passwordbox" HorizontalAlignment="Left" Margin="216,150,0,0" VerticalAlignment="Top" Height="23" Width="120" />
    </Grid>
</Window>
